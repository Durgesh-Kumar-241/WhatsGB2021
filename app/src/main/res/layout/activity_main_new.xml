<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:orientation="vertical"

    android:visibility="visible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/offlinechat"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="@dimen/margin_side"
                android:layout_marginLeft="@dimen/margin_side"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="@dimen/margin_side"
                android:layout_marginRight="@dimen/margin_side"
                android:background="@drawable/circuler_background"
                android:drawablePadding="16dp"
                android:elevation="16dp"
                android:fontFamily="@font/dancing_script"
                android:gravity="center|start"
                android:padding="16dp"
                android:text="Offline Chat"
                android:textSize="18sp"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/ic_baseline_visibility_off_24"
                app:drawableRightCompat="@drawable/ic_baseline_navigate_next_24"
                tools:targetApi="lollipop" />

            <TextView
                android:id="@+id/statussaver"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="@dimen/margin_side"
                android:layout_marginLeft="@dimen/margin_side"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/margin_side"
                android:layout_marginRight="@dimen/margin_side"
                android:background="@drawable/circuler_background"
                android:drawablePadding="16dp"
                android:elevation="16dp"
                android:fontFamily="@font/dancing_script"
                android:gravity="center|start"
                android:padding="16dp"
                android:text="Status saver"
                android:textSize="18sp"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/ic_baseline_save_alt_24"
                app:drawableRightCompat="@drawable/ic_baseline_navigate_next_24"
                tools:targetApi="lollipop" />

            <TextView
                android:id="@+id/dchat"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="@dimen/margin_side"
                android:layout_marginLeft="@dimen/margin_side"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/margin_side"
                android:layout_marginRight="@dimen/margin_side"
                android:background="@drawable/circuler_background"
                android:drawablePadding="16dp"
                android:elevation="16dp"
                android:fontFamily="@font/dancing_script"
                android:gravity="center|start"
                android:padding="16dp"
                android:text="Direct Chat"
                android:textSize="18sp"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/ic_baseline_chat_24"
                app:drawableRightCompat="@drawable/ic_baseline_navigate_next_24"
                tools:targetApi="lollipop" />

            <TextView
                android:id="@+id/more"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="@dimen/margin_side"
                android:layout_marginLeft="@dimen/margin_side"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/margin_side"
                android:layout_marginRight="@dimen/margin_side"
                android:layout_marginBottom="100dp"
                android:background="@drawable/circuler_background"
                android:drawablePadding="16dp"
                android:elevation="16dp"
                android:fontFamily="@font/dancing_script"
                android:gravity="center|start"
                android:padding="16dp"
                android:text="More features"
                android:textSize="18sp"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/ic_baseline_add_24"
                app:drawableRightCompat="@drawable/ic_baseline_navigate_next_24"
                tools:targetApi="lollipop" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>