<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:visibility="visible">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/whatsback"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/whasweb"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="2dp"
                        android:checkable="false"
                        android:clickable="true"
                        android:focusable="true"
                        app:contentPadding="8dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView

                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    android:background="@color/colorprimary"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/newicon" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/dancing_script"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="@string/str_title_main_fragment"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                            </LinearLayout>
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>


                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/textr"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="2dp"
                        android:checkable="false"
                        android:clickable="true"
                        android:focusable="true"
                        app:contentPadding="8dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView

                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    android:background="@color/colorprimary"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/ic_baseline_text_fields_24" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/dancing_script"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="Text repeater"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                            </LinearLayout>
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/statussaver"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="2dp"
                        android:checkable="false"
                        android:clickable="true"
                        android:focusable="true"
                        app:contentPadding="8dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView

                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    android:background="@color/colorprimary"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/status" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/dancing_script"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="@string/status_saver"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                            </LinearLayout>
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/savedstatus"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="2dp"
                        android:checkable="false"
                        android:clickable="true"
                        android:focusable="true"
                        app:contentPadding="8dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView

                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    android:background="@color/colorprimary"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/ic_baseline_sd_storage_24" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/dancing_script"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="@string/saved_status"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                            </LinearLayout>
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">





                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/empty"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="2dp"
                        android:checkable="false"
                        android:clickable="true"
                        android:focusable="true"
                        app:contentPadding="8dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView

                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    android:background="@color/colorprimary"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/ic_baseline_chat_24" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/dancing_script"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="Empty message"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                            </LinearLayout>
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/direct"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="2dp"
                        android:checkable="false"
                        android:clickable="true"
                        android:focusable="true"
                        app:contentPadding="8dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView

                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    android:background="@color/colorprimary"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/ic_baseline_chat_24" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/dancing_script"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="Direct chat"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                            </LinearLayout>
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="visible"
                    tools:visibility="visible">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/offline"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="2dp"
                        android:checkable="false"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="visible"
                        app:contentPadding="8dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView

                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    android:background="@color/colorprimary"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/ic_baseline_star_rate_24" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/dancing_script"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="Rate us"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                            </LinearLayout>
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>


                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"

        android:layout_marginBottom="16dp"
        android:background="@color/purple_500"
        android:clickable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_apps_24" />

</androidx.constraintlayout.widget.ConstraintLayout>