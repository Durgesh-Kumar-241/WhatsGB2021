<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:visibility="visible">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:adSize="SMART_BANNER"
        app:adUnitId="@string/mainBanner" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/whatsback">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/whatsappweb"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="2dp"
                        android:checkable="false"
                        android:clickable="true"
                        android:focusable="true"
                        app:contentPadding="8dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView

                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/iconwhats" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/dancing_script"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="@string/str_title_main_fragment"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                            </LinearLayout>
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>


                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/directchat"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="2dp"
                        android:checkable="false"
                        android:clickable="true"
                        android:focusable="true"
                        app:contentPadding="8dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/imageView"
                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/v_" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/itemsharedname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/dancing_script"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="@string/direct_chat"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                            </LinearLayout>
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/statussaver"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="2dp"
                        android:checkable="false"
                        android:clickable="true"
                        android:focusable="true"
                        app:contentPadding="8dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView

                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/tu" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/dancing_script"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="@string/status_saver"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                            </LinearLayout>
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/savedstatus"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="2dp"
                        android:checkable="false"
                        android:clickable="true"
                        android:focusable="true"
                        app:contentPadding="8dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView

                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/tm" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/dancing_script"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="@string/saved_status"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                            </LinearLayout>
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/facebook"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="2dp"
                        android:checkable="false"
                        android:clickable="true"
                        android:focusable="true"
                        app:contentPadding="8dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView

                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/facebook" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/dancing_script"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="@string/facebook"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                            </LinearLayout>
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/instagram"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="2dp"
                        android:checkable="false"
                        android:clickable="true"
                        android:focusable="true"
                        app:contentPadding="8dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView

                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/in2" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/dancing_script"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="@string/instagram"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                            </LinearLayout>
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="visible"
                    tools:visibility="visible">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/browser"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_margin="2dp"
                        android:layout_marginBottom="2dp"
                        android:checkable="false"
                        android:clickable="true"
                        android:focusable="true"
                        app:contentPadding="8dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"


                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView

                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/bros" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/dancing_script"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="@string/browser"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:typeface="monospace" />

                            </LinearLayout>
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>