<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:orientation="vertical"

    android:visibility="visible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">
            <LinearLayout
                android:id="@+id/banner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/directchat2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@drawable/circuler_background"
                        android:drawablePadding="16dp"
                        android:elevation="16dp"
                        android:fontFamily="@font/dancing_script"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="@string/offline_chat"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:typeface="normal"
                        app:drawableTopCompat="@drawable/ic_baseline_visibility_off_24" />

                    <TextView
                        android:id="@+id/whatsweb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@drawable/circuler_background"
                        android:drawablePadding="16dp"
                        android:elevation="16dp"
                        android:fontFamily="@font/dancing_script"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/whatsapp_web"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:drawableTopCompat="@drawable/gbiconnewsmall" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/directchat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@drawable/circuler_background"
                        android:drawablePadding="16dp"
                        android:elevation="16dp"
                        android:fontFamily="@font/dancing_script"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="@string/direct_chat"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:typeface="normal"
                        app:drawableTopCompat="@drawable/ic_baseline_chat_24" />

                    <TextView
                        android:id="@+id/statussaver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@drawable/circuler_background"
                        android:drawablePadding="16dp"
                        android:elevation="16dp"
                        android:fontFamily="@font/dancing_script"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="@string/status_saver"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:drawableTopCompat="@drawable/ic_baseline_save_alt_24_large" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textrepeater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@drawable/circuler_background"
                        android:drawablePadding="16dp"
                        android:elevation="16dp"
                        android:fontFamily="@font/dancing_script"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="@string/text_repeater"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:typeface="normal"
                        app:drawableTopCompat="@drawable/ic_baseline_repeat_24" />

                    <TextView
                        android:id="@+id/emptytext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@drawable/circuler_background"
                        android:drawablePadding="16dp"
                        android:elevation="16dp"
                        android:fontFamily="@font/dancing_script"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="@string/empty_text"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:typeface="normal"
                        app:drawableTopCompat="@drawable/ic_baseline_chat_bubble_outline_24" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>